{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "types": ["@playwright/test", "node"],
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "playwright.config.ts", "eslint.config.ts"]
}
